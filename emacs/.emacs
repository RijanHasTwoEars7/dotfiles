;; hoping this will work with the done taks now
(defun org-archive-done-tasks ()
  (interactive)
  (org-map-entries
   (lambda ()
     (org-archive-subtree)
     (setq org-map-continue-from
           (org-element-property :begin
                                 (org-element-at-point))))
   "/DONE" 'tree))
   
